<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.se.kmbss.domain.PostMapper">

    <!-- tb_post 테이블 전체 컬럼 -->
    <sql id="EN_GROUPNOTICE">
        id
        , content

    </sql>
    <!-- 게시글 저장 -->
    <insert id="save" parameterType="com.se.kmbss.domain.PostRequest">
        INSERT INTO tb_post (
        <include refid="EN_GROUPNOTICE" />
        ) VALUES (
        #{id} , #{content}
        )
    </insert>

    <!-- 게시글 수정 -->
    <update id="update" parameterType="com.se.kmbss.domain.PostRequest">
        UPDATE tb_post
        SET
        modified_date = NOW()
        , content = #{content}
        WHERE
        id = #{id}
    </update>
</mapper>